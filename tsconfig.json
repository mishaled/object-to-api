{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es6",
        "module": "commonjs",
        "lib": ["es2017"],
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["dist", ".history"],
    "compileOnSave": true
}
